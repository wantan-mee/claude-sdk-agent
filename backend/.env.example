# Anthropic API Key (Required)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Server Configuration
PORT=8000
NODE_ENV=development

# Storage
DATA_DIR=./data
AGENT_OUTPUT_DIR=./agent-output

# Feature Flags
ENABLE_ARTIFACTS_STORAGE=true
ENABLE_RAG=true

# RAG Configuration (requires ENABLE_RAG=true)
RAG_BEDROCK_KB_ID=your-knowledge-base-id
RAG_AWS_REGION=us-east-1
RAG_MAX_RESULTS=10
RAG_MAX_DECOMPOSITION_QUERIES=5
RAG_MIN_RELEVANCE_SCORE=0.5

# CORS
FRONTEND_URL=http://localhost:5173
