# Anthropic API Key (Required)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Server Configuration
PORT=8000
NODE_ENV=development

# Storage
DATA_DIR=./data
AGENT_OUTPUT_DIR=./agent-output

# Feature Flags
ENABLE_ARTIFACTS_STORAGE=true
ENABLE_RAG=true

# RAG Configuration (requires ENABLE_RAG=true)
RAG_BEDROCK_KB_ID=your-knowledge-base-id
RAG_AWS_REGION=us-east-1
RAG_MAX_RESULTS=10
RAG_MAX_DECOMPOSITION_QUERIES=5
RAG_MIN_RELEVANCE_SCORE=0.5
# RAG_MODE options: 'mcp' (default) or 'custom_tool' or 'pre_retrieval'
# - mcp: Agent uses MCP server to access Bedrock KB (recommended for agentic control)
# - custom_tool: Agent uses custom tool function for KB access
# - pre_retrieval: Context retrieved before agent sees message (legacy)
RAG_MODE=mcp

# CORS
FRONTEND_URL=http://localhost:5173
